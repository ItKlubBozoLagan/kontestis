{
    "name": "kontestis",
    "version": "1.0.0",
    "repository": "https://github.com/ItKlubBozoLagan/kontestis",
    "license": "MIT",
    "private": true,
    "scripts": {
        "link-tsconfig": "pnpm list -r --depth -1 --parseable | xargs -I {} bash -c 'if [[ -f \"{}\"/tsconfig.json ]]; then ln -sf ../../tsconfig.base.json \"{}\"/tsconfig.base.json; fi'",
        "preinstall": "npx only-allow pnpm",
        "postinstall": "pnpm link-tsconfig",
        "prepare": "husky install",
        "lint": "eslint --ignore-pattern '**/node_modules/**' --ext .tsx,.ts ./apps ./packages",
        "typecheck": "pnpm -r typecheck"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "eslint": "^8.33.0",
        "eslint-plugin-radar": "^0.2.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-sonarjs": "^0.18.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "eslint-plugin-v3xlabs": "^1.5.2",
        "husky": "^8.0.3"
    }
}
